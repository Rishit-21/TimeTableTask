@model TimetableInputModel

<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4 text-primary">Timetable Generator</h2>

        <form method="post" asp-action="GetTimetableForm" asp-controller="Timetable" novalidate>
            <div class="mb-3">
                <label class="form-label">No. of Working Days (1-7):</label>
                <input asp-for="NoOfWorkingDays" class="form-control" />
                <span asp-validation-for="NoOfWorkingDays" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">No. of Subjects per Day (1-8):</label>
                <input asp-for="SubjectsPerDay" class="form-control" />
                <span asp-validation-for="SubjectsPerDay" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Total Subjects:</label>
                <input asp-for="TotalSubjects" class="form-control" />
                <span asp-validation-for="TotalSubjects" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2">Next</button>
            </div>
        </form>
    </div>
</div>

@model TimetableModel

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center text-primary mb-4">Generated Timetable</h2>

        <div class="table-responsive">
            <table class="table table-hover table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        @foreach (var day in Model.WorkingDays)
                        {
                            <th>@day</th> <!-- Display weekday names dynamically -->
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int j = 0; j < Model.TimetableGrid[0].Count; j++) // Rows (Hours per day)
                    {
                        <tr>
                            @for (int i = 0; i < Model.TimetableGrid.Count; i++) // Columns (Working days)
                            {
                                <td class="fw-bold text-uppercase">@Model.TimetableGrid[i][j]</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary px-4 py-2 rounded-pill">
                <i class="fas fa-redo"></i> Generate New Timetable
            </a>
        </div>
    </div>
</div>
